<%= render "/pages/navbar" %>

<div class="listing-hero">
<h1>Years Listing</h1>
</div>

<table id="listing">
<thead>
  <tr>
    <th>Years</th>
  

    
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>

<% @years.each do |year|%>
  <tr class="listing-row">
    <td><%= year.name %></td>

  <td><%= link_to 'Edit', edit_year_path(year), class:"listing-link" %></td>
    <td><%= link_to 'Destroy', year_path(year),
            method: :delete,
            data: { confirm: 'Are you sure sure?'}, class:"listing-link" %></td>

<% end %>




</tbody>
</table>

<br>

<%= link_to 'Add new year', new_year_path %>


