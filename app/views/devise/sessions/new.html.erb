
<%= render "/pages/navbar" %>

<div class="devise-form-container">
  <div class="devise-form">
     <div class="devise-form-content">

<h2 class="devise-signup-h2">Tech Exchange Log in</h2>
<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:"field-label"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"field-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:"field-label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
    <br>
    <br>
    <%= link_to 'Signup', new_user_registration_path, class:"signup-link" %> %>
  </div>
<% end %>

 

 
    </div>
    
  </div>
</div>

<%= render 'pages/footer' %>
