<%= render 'navbar' %>

<body>
<main>
<p class = "notice"></p>

<div class="hero-text">
<h1 class="h1-pages">Breathe life into old tech.</h1>
<h2 class="h2-pages">Donate unwanted computers and laptops to the Tech Exchange.</h2>
</div>


<div class="listing-hero">
<h2>Recent listings</h2>
</div>


<% @listings = Listing.all %>
<% @listings.last(6).each do |listing|%>
  <div class="content">
    <div class="card">
      <div class="card-content">
        <p class="home-card">Title: <%= listing.title %></p>
        <p><%= image_tag listing.picture, class: 'background-image' if listing.picture.attached? %></p>
        <p class="home-card">Description: <%= listing.description %></p>
        <p>Operating System: <%= listing.system.name %></p>
        <p>Year: <%= listing.year.name %></p>
        <p>Condition: <%= listing.condition.condition %></p>
        <p>Machine type: <%= listing.machine.name %></p>
        <p>Location: <%= listing.location %></p>
        <p><%= link_to "View listing", listing_path( listing ) %></p>
        <%end%>
      </div>
    </div>
  </div>
<br>
<%= render 'footer' %>
</main>
</body>

