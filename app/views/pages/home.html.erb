<%= render 'navbar' %>

<body>
<main>
<span class = "notice"></span>

<div class="hero-text">
<h1 class="h1-pages">Breathe life into old tech.</h1>
<h2 class="h2-pages">Donate unwanted computers and laptops to the Tech Exchange.</h2>
</div>


<div class="listing-hero">
<h2>Recent listings</h2>
</div>

<div class="content2">
<div class="content">
<% @listings = Listing.all %>
  <% @listings.last(6).each do |listing|%>

    <div class="card-content">
      <span><strong><%= listing.title %></strong></span>
      <span><%= image_tag listing.picture, class: 'background-image' if listing.picture.attached? %></span>
      
      <span>Description: <%= listing.description %></span>
      <span>Operating System: <%= listing.system.name %></span>
      <span>Year: <%= listing.year.name %></span>
      <span>Condition: <%= listing.condition.condition %></span>
      <span>Machine type: <%= listing.machine.name %></span>
      <span>Location: <%= listing.location %></span>
      <span><%= link_to "View listing", listing_path( listing ) %></span>
    </div>
  <%end%>
<br>
</div>
</div>
<%= render 'footer' %>
</main>
</body>

